# ===================================
# EVA LITE - PRD COMPLIANT CONFIGURATION
# ===================================

# CORE CONFIGURATION
ENVIRONMENT=production
DOMAIN=localhost
ADMIN_KEY=eva-admin-secure-key-12345

# TELEGRAM BOT CONFIGURATION
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=http://localhost:8000
# For production: WEBHOOK_URL=https://yourdomain.com

# AI CONFIGURATION - PRD SPECIFIED MODELS
OPENAI_API_KEY=your_openai_api_key_here
HUGGING_FACE_HUB_TOKEN=your_hugging_face_token_here
VLLM_URL=http://vllm:8000
LOCAL_AI_URL=http://vllm:8000/v1
VLLM_MODEL_NAME=meta-llama/Meta-Llama-3-8B-Instruct
LOCAL_MODEL_NAME=llama-3-8b

# DATABASE CONFIGURATION
REDIS_URL=redis://redis:6379/0
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Cost and Rate Limiting
MAX_MONTHLY_COST_INR=5000
RATE_LIMIT_PER_USER=1
RATE_LIMIT_GLOBAL=60

# Memory Configuration
MEMORY_DECAY_LAMBDA=0.1
MAX_MEMORY_ITEMS=1000
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# VOICE CONFIGURATION - XTTS v2
TTS_ENABLED=true
VOICE_CACHE_ENABLED=true
XTTS_SERVER_URL=http://xtts:8020
WHISPER_MODEL_SIZE=small
COQUI_TOS_AGREED=1

# PERFORMANCE SETTINGS
MAX_TOKENS=1024
TEMPERATURE=0.7
TEXT_RESPONSE_TARGET=2.5
VOICE_RESPONSE_TARGET=1.2

# GPU CONFIGURATION
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_UTILIZATION=0.8

# SECURITY
SECRET_KEY=eva-lite-super-secure-secret-key-minimum-32-chars
API_RATE_LIMIT=100

# MONITORING
LOG_LEVEL=INFO
METRICS_ENABLED=true
DEBUG=false