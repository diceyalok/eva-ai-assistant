# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_random_webhook_secret

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
REDIS_URL=redis://redis:6379
CHROMA_HOST=chromadb
CHROMA_PORT=8000
POSTGRES_URL=postgresql://eva:${POSTGRES_PASSWORD}@postgres:5432/eva_db

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key
VLLM_BASE_URL=http://vllm:8000/v1
LOCAL_MODEL_NAME=meta-llama/Llama-2-7b-chat-hf

# vLLM Model Configuration (for docker-compose)
VLLM_MODEL_NAME=microsoft/DialoGPT-medium
USE_GPU=false

# Cost and Rate Limiting
MAX_MONTHLY_COST_INR=5000
RATE_LIMIT_PER_USER=1
RATE_LIMIT_GLOBAL=60

# Memory Configuration
MEMORY_DECAY_LAMBDA=0.1
MAX_MEMORY_ITEMS=1000
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Voice Configuration
WHISPER_MODEL_SIZE=small
TTS_MODEL_PATH=./models/xtts_v2
AUDIO_CACHE_TTL=3600
XTTS_SERVER_URL=http://localhost:8020

# Personality Configuration
LORA_FRIENDLY_PATH=./models/lora/friendly
LORA_FORMAL_PATH=./models/lora/formal
LORA_GENZ_PATH=./models/lora/genz
DEFAULT_TONE=friendly

# Infrastructure
DOMAIN=yourdomain.com
ENVIRONMENT=development
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Security
SECRET_KEY=your_secret_key_for_sessions_and_tokens
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000